<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuapp">

    <ImageView
        android:id="@+id/Fondopantalla"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo_verde2" />

    <ImageView
        android:id="@+id/atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="5"
        android:scaleY="5"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/devolver"
        android:onClick="onClick4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity=""
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="APPRECICLAR"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="35dp"
            app:columnCount="2"
            app:rowCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/tarjerecic"
                style="@style/Cardmenu"
                android:onClick="onClick"
                app:layout_column="0"
                app:layout_row="0">

                <ImageView
                    android:id="@+id/reciimg"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/recyclingimg" />

                <TextView
                    android:id="@+id/recicl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="RECICLA"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tarjeestadis"
                style="@style/Cardmenu"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:onClick="onClick2"
                app:layout_column="1"
                app:layout_row="0">

                <ImageView
                    android:id="@+id/estadisimg"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/estadisc2" />

                <TextView
                    android:id="@+id/estadis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="ESTADISTICA"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/Cardmenu"
                android:id="@+id/tarjetips"
                app:layout_column="1"
                app:layout_row="1"
                android:onClick="onClick3"
                >

                <ImageView
                    android:id="@+id/tipimg"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/bombi2" />

                <TextView
                    android:id="@+id/tipsla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="TIPS"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tarjevacio"
                style="@style/Cardmenu"
                app:layout_column="0"
                app:layout_row="1"

                >

                <ImageView
                    android:id="@+id/vacioimg"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"

                    />

                <TextView
                    android:id="@+id/vaciola"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="25dp" />

            </androidx.cardview.widget.CardView>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>